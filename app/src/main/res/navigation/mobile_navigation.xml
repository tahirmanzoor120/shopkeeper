    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_products">

    <fragment
        android:id="@+id/navigation_clients"
        android:name="com.tahirmanzoor.shopkeeper.ui.clients.ClientFragment"
        android:label="Clients"
        tools:layout="@layout/fragment_clients" />

    <fragment
        android:id="@+id/navigation_products"
        android:name="com.tahirmanzoor.shopkeeper.ui.products.ProductFragment"
        android:label="Products"
        tools:layout="@layout/fragment_products" />

    <fragment
        android:id="@+id/navigation_billing"
        android:name="com.tahirmanzoor.shopkeeper.ui.billing.BillingFragment"
        android:label="Billing"
        tools:layout="@layout/fragment_billing" />
